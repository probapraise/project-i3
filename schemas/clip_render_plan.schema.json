{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/clip_render_plan.schema.json",
  "title": "clip_render_plan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "session_id",
    "objective_id",
    "created_at",
    "style_preset",
    "clips"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "objective_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "style_preset": {
      "type": "string",
      "minLength": 1
    },
    "clips": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "scene_id",
          "beat_id",
          "duration_sec",
          "image_prompt",
          "video_prompt"
        ],
        "properties": {
          "scene_id": {
            "type": "string",
            "minLength": 1
          },
          "beat_id": {
            "type": "string",
            "minLength": 1
          },
          "duration_sec": {
            "type": "number",
            "minimum": 0.5
          },
          "image_prompt": {
            "type": "string",
            "minLength": 1
          },
          "video_prompt": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
