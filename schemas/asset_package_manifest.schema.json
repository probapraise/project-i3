{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/asset_package_manifest.schema.json",
  "title": "asset_package_manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "session_id",
    "objective_id",
    "created_at",
    "style_preset",
    "quality_status",
    "scene_ids",
    "artifacts"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "objective_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "style_preset": {
      "type": "string",
      "minLength": 1
    },
    "quality_status": {
      "type": "string",
      "enum": [
        "READY_FOR_ASSET_PIPELINE",
        "NEEDS_PROMPT_REVIEW"
      ]
    },
    "scene_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "path"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
