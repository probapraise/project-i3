{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/script_session_pack.schema.json",
  "title": "script_session_pack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "session_id",
    "objective_id",
    "created_at",
    "case_id",
    "selected_script",
    "script_bank",
    "translation_outputs",
    "narration_only_pt",
    "trigger_words",
    "banned_expressions",
    "policy_notes",
    "character_fact_registry",
    "lock_policy",
    "quality_status"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "objective_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "case_id": {
      "type": "string",
      "minLength": 1
    },
    "selected_script": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "script_id",
        "variant",
        "script_text_en",
        "script_text_pt",
        "total_score",
        "criteria",
        "hard_constraints",
        "hard_pass"
      ],
      "properties": {
        "script_id": {
          "type": "string",
          "minLength": 1
        },
        "variant": {
          "type": "string",
          "minLength": 1
        },
        "script_text_en": {
          "type": "string",
          "minLength": 1
        },
        "script_text_pt": {
          "type": "string",
          "minLength": 1
        },
        "total_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "criteria": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          }
        },
        "hard_constraints": {
          "type": "object",
          "additionalProperties": {
            "type": "boolean"
          }
        },
        "hard_pass": {
          "type": "boolean"
        }
      }
    },
    "script_bank": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "script_id",
          "variant",
          "script_text_en",
          "source_claim_ids"
        ],
        "properties": {
          "script_id": {
            "type": "string",
            "minLength": 1
          },
          "variant": {
            "type": "string",
            "minLength": 1
          },
          "script_text_en": {
            "type": "string",
            "minLength": 1
          },
          "source_claim_ids": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "translation_outputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "script_refined_pt",
        "pure_narration_pt",
        "korean_translation",
        "structured_doc",
        "reconstruction_status"
      ],
      "properties": {
        "script_refined_pt": {
          "type": "string",
          "minLength": 1
        },
        "pure_narration_pt": {
          "type": "string",
          "minLength": 1
        },
        "korean_translation": {
          "type": "string",
          "minLength": 1
        },
        "structured_doc": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "segment_id",
              "phase",
              "narration_pt",
              "narration_ko",
              "source_claim_ids"
            ],
            "properties": {
              "segment_id": {
                "type": "string",
                "minLength": 1
              },
              "phase": {
                "type": "string",
                "minLength": 1
              },
              "narration_pt": {
                "type": "string",
                "minLength": 1
              },
              "narration_ko": {
                "type": "string",
                "minLength": 1
              },
              "source_claim_ids": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "reconstruction_status": {
          "type": "string",
          "enum": [
            "AUTO_ACCEPTED",
            "NEEDS_HITL_REVIEW"
          ]
        }
      }
    },
    "narration_only_pt": {
      "type": "string",
      "minLength": 1
    },
    "trigger_words": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "banned_expressions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "policy_notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "character_fact_registry": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/entity"
      }
    },
    "lock_policy": {
      "type": "string",
      "const": "REAL > INFERRED > NO_INFO"
    },
    "quality_status": {
      "type": "string",
      "enum": [
        "READY_FOR_SCENE_PLANNING",
        "NEEDS_SCRIPT_REWORK"
      ]
    }
  },
  "$defs": {
    "entity": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "entity_id",
        "entity_type",
        "role_label",
        "fields"
      ],
      "properties": {
        "entity_id": {
          "type": "string",
          "minLength": 1
        },
        "entity_type": {
          "type": "string",
          "enum": [
            "PERSON",
            "LOCATION",
            "OBJECT",
            "EVENT"
          ]
        },
        "role_label": {
          "type": "string",
          "minLength": 1
        },
        "display_name": {
          "type": "string"
        },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/profile_field"
          }
        }
      }
    },
    "profile_field": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "field",
        "value",
        "source_tag"
      ],
      "properties": {
        "field": {
          "type": "string",
          "minLength": 1
        },
        "value": {
          "type": [
            "string",
            "number",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "source_tag": {
          "type": "string",
          "enum": [
            "REAL",
            "INFERRED",
            "NO_INFO"
          ]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "reason": {
          "type": "string"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "source_tag": {
                "const": "NO_INFO"
              }
            }
          },
          "then": {
            "properties": {
              "value": {
                "type": "null"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "source_tag": {
                "const": "REAL"
              }
            }
          },
          "then": {
            "required": [
              "sources"
            ],
            "properties": {
              "sources": {
                "type": "array",
                "minItems": 1
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "source_tag": {
                "const": "INFERRED"
              }
            }
          },
          "then": {
            "required": [
              "confidence",
              "reason"
            ],
            "properties": {
              "reason": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      ]
    }
  }
}
