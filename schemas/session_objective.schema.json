{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/session_objective.schema.json",
  "title": "session_objective",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "session_id",
    "objective_id",
    "created_at",
    "objective_name",
    "success_criteria",
    "score_spec_ref"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "objective_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "objective_name": {
      "type": "string",
      "minLength": 1
    },
    "success_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "score_spec_ref": {
      "type": "string",
      "minLength": 1
    },
    "policy_constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
