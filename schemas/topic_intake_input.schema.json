{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/topic_intake_input.schema.json",
  "title": "topic_intake_input",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "session_id",
    "objective_id",
    "created_at",
    "topic_query",
    "user_collected_materials"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "objective_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "topic_query": {
      "type": "string",
      "minLength": 3
    },
    "user_collected_materials": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "material_id",
          "material_type",
          "content"
        ],
        "properties": {
          "material_id": {
            "type": "string",
            "minLength": 1
          },
          "material_type": {
            "type": "string",
            "enum": [
              "URL",
              "NOTE",
              "IMAGE_DESC",
              "ARTICLE_SNIPPET",
              "VIDEO_DESC",
              "OTHER"
            ]
          },
          "content": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "source_name": {
            "type": "string"
          },
          "published_at": {
            "type": "string"
          },
          "language": {
            "type": "string",
            "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target_locale": {
          "type": "string"
        },
        "policy_profile": {
          "type": "string"
        },
        "no_go_topics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
