{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/entity_profile_pack.schema.json",
  "title": "entity_profile_pack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "session_id",
    "objective_id",
    "created_at",
    "case_id",
    "entities",
    "context_fields",
    "profile_status"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "objective_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "case_id": {
      "type": "string",
      "minLength": 1
    },
    "entities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/entity"
      }
    },
    "context_fields": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/profile_field"
      }
    },
    "profile_status": {
      "type": "string",
      "enum": [
        "READY_FOR_SCRIPT",
        "NEEDS_HITL_REVIEW"
      ]
    }
  },
  "$defs": {
    "entity": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "entity_id",
        "entity_type",
        "role_label",
        "fields"
      ],
      "properties": {
        "entity_id": {
          "type": "string",
          "minLength": 1
        },
        "entity_type": {
          "type": "string",
          "enum": [
            "PERSON",
            "LOCATION",
            "OBJECT",
            "EVENT"
          ]
        },
        "role_label": {
          "type": "string",
          "minLength": 1
        },
        "display_name": {
          "type": "string"
        },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/profile_field"
          }
        }
      }
    },
    "profile_field": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "field",
        "value",
        "source_tag"
      ],
      "properties": {
        "field": {
          "type": "string",
          "minLength": 1
        },
        "value": {
          "type": [
            "string",
            "number",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "source_tag": {
          "type": "string",
          "enum": [
            "REAL",
            "INFERRED",
            "NO_INFO"
          ]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "reason": {
          "type": "string"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "source_tag": {
                "const": "NO_INFO"
              }
            }
          },
          "then": {
            "properties": {
              "value": {
                "type": "null"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "source_tag": {
                "const": "REAL"
              }
            }
          },
          "then": {
            "required": [
              "sources"
            ],
            "properties": {
              "sources": {
                "type": "array",
                "minItems": 1
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "source_tag": {
                "const": "INFERRED"
              }
            }
          },
          "then": {
            "required": [
              "confidence",
              "reason"
            ],
            "properties": {
              "reason": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      ]
    }
  }
}
