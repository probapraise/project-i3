{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/sound_design_plan.schema.json",
  "title": "sound_design_plan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "session_id",
    "objective_id",
    "created_at",
    "style_preset",
    "cues"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "objective_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "style_preset": {
      "type": "string",
      "minLength": 1
    },
    "cues": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "scene_id",
          "action",
          "emotion",
          "time_of_day",
          "weather"
        ],
        "properties": {
          "scene_id": {
            "type": "string",
            "minLength": 1
          },
          "action": {
            "type": "string",
            "minLength": 1
          },
          "emotion": {
            "type": "string",
            "minLength": 1
          },
          "time_of_day": {
            "type": "string",
            "minLength": 1
          },
          "weather": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
